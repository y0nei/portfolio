---
import { Icon } from "astro-icon/components";
import HandlePill from "./HandlePill.astro";
import BadgeMarquee from "./BadgeMarquee.astro";
---

<div class="bento-grid">
    <div class="bento-section">
        <HandlePill />
    </div>
    <div class="bento-section vertical-bento flex-vertical">
        <BadgeMarquee />
        <div class="horizontal-bento bento-section">
            <div class="bento-section">idk what to add here???</div>
            <div class="bento-buttons flex-vertical">
                <a>Service status</a>
                <a>Blog <Icon name="blog" size={18} /></a>
            </div>
        </div>
    </div>
</div>

<style lang="scss">
    .bento-grid {
        display: flex;
        gap: 1rem;

        .bento-section {
            font-family: "Rubik";
            color: var(--text-color);
            background-color: #323235;
            border: 1px solid #454549;
            border-radius: 0.75rem;
        }

        .vertical-bento, .horizontal-bento {
            flex: 1;
            gap: inherit;
            border: none;
            background-color: transparent;
        }

        .horizontal-bento {
            display: flex;
            flex-direction: row;

            & > .bento-section {
                display: flex;
                flex: 1;
                justify-content: center;
                align-items: center;
            }
        }

        .flex-vertical {
            display: flex;
            flex-direction: column;
        }

        .bento-buttons {
            display: flex;
            gap: 1rem;

            & > a {
                flex: 1;
                display: flex;
                justify-content: center;
                align-items: center;
                border: none;
                padding: 7px 12px;
                border-radius: 0.7rem;
                background-color: var(--background-color-alt);
                width: 100%;

                &:last-child {
                    color: var(--background-color);
                    background-color: var(--accent-color);

                    svg {
                        margin-bottom: 1px;
                        margin-left: 5px;
                    }
                }
            }
        }
    }
</style>
