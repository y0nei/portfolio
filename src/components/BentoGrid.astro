---
import { Icon } from "astro-icon/components";
import HandlePill from "./HandlePill.astro";
import BadgeMarquee from "./BadgeMarquee.astro";
import WebringSelector from "./WebringSelector.astro";
---

<div class="bento-grid">
    <div class="bento-section">
        <HandlePill />
    </div>
    <div class="bento-section vertical-bento flex-vertical">
        <BadgeMarquee />
        <div class="horizontal-bento bento-section">
            <div class="bento-section webring-section">
                <header><p>Webrings</p></header>
                <div class="webring-wrapper">
                    <WebringSelector name="webring one" />
                    <WebringSelector name="webring two" />
                </div>
            </div>
            <div class="bento-buttons flex-vertical">
                <a>Service status</a>
                <a>Blog <Icon name="blog" size={18} /></a>
            </div>
        </div>
    </div>
</div>

<style lang="scss">
    .bento-grid {
        display: flex;
        gap: 1rem;

        .bento-section {
            font-family: "Rubik";
            color: var(--text-color);
            background-color: #323235;
            border: 1px solid #454549;
            border-radius: var(--border-radius);
        }

        .vertical-bento, .horizontal-bento {
            flex: 1;
            gap: inherit;
            border: none;
            background-color: transparent;
        }

        .horizontal-bento {
            display: flex;
            flex-direction: row;
        }

        .flex-vertical {
            display: flex;
            flex-direction: column;
        }

        .bento-buttons {
            display: flex;
            gap: 1rem;

            & > a {
                flex: 1;
                display: flex;
                justify-content: center;
                align-items: center;
                border: none;
                padding: 7px 12px;
                border-radius: var(--border-radius);
                background-color: var(--background-color-alt);
                width: 100%;

                &:last-child {
                    color: var(--background-color);
                    background-color: var(--accent-color);

                    svg {
                        margin-bottom: 1px;
                        margin-left: 5px;
                    }
                }
            }
        }

        .webring-section {
            display: flex;
            flex: 1;
            flex-direction: column;
            padding: 5px;

            .webring-wrapper {
                display: flex;
                flex: 1;
                justify-content: center;
                align-items: center;
                gap: 0.33rem;
                justify-content: space-evenly;
            }

            header {
                display: flex;
                align-items: center;
                font-size: 0.9rem;
                padding: 5px 8px;
                margin-bottom: 5px;
                width: fit-content;
                border-radius: calc(var(--border-radius) - 5px);
                background-color: #454549;
                box-shadow: 2px 2px 5px 0px rgba(0,0,0,0.2);

                p {
                    margin-top: 1px;
                }
            }
        }
    }
</style>
