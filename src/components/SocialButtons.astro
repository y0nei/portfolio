---
import { Icon } from "astro-icon/components";

import socials from "../socials.json";
import InfoIcon from "./InfoIcon.astro";
import PopoverTooltip from "./PopoverTooltip.astro";

const platform_colors = {
    bluesky: "#0285FF",
    twitter: "#000000",
    iceshrimp: "#9A92FF",
    telegram: "#26A5E4",
    "ko-fi": "#FF5E5B",
    liberapay: "#F6C915",
    instagram: "#E4405F",
    codeberg: "#2185D0",
    github: "#181717",
    gitlab: "#FC6D26"
}
type PlatformColorKey = keyof typeof platform_colors;
---

<div class="socialsContainer">
{socials.buttons.map((item) => (
<div style={"--hover-color:" + platform_colors[item.service.toLowerCase() as PlatformColorKey]}
     class={"icon-" + item.service.toLowerCase()}>
        <a href={item.link} target="_blank">
            <Icon name={item.service.toLowerCase()} size={30} />
            <PopoverTooltip class="show-tooltip">{item.service}</PopoverTooltip>
        </a>
        {item.service == "Iceshrimp" && <InfoIcon>
            <PopoverTooltip class="iceshrimp-tooltip">
                <p>
                    A
                    <a href="https://en.wikipedia.org/wiki/Fediverse" target="_blank">
                        Fediverse
                    </a>
                    instance hosted using the Iceshrimp software
                </p>
                <a class="info-tooltip-button" target="_blank"
                   href="https://fedidb.org/software/iceshrimp">
                    Find out more&nbsp; <Icon name="external-link" size={15}/>
                </a>
            </PopoverTooltip>
        </InfoIcon>}
    </div>
))}
</div>

<style lang="scss">
    .socialsContainer {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        font-family: sans-serif;
        justify-content: space-around;

        svg { color: black }

        .info-icon {
            position: absolute;
            right: -10%;
            top: -10%;

            &:hover {
                background-color: lightgreen;  // temporary

                .popover-tooltip {
                    opacity: 1;
                    visibility: visible;
                    // Delay for opacity just on hover for a suttle effect
                    transition-delay: 400ms;
                    transition-property: opacity;
                }
            }
        }

        & > div {
            position: relative;
            display: flex;
            width: 50px;
            aspect-ratio: 1;

            & > a {
                display: flex;
                justify-content: center;  // For tooltips
                padding: 10px;
                transition: 150ms;
                background: white;
                border-radius: var(--border-radius);
                background-color: var(--offwhite-color);
                white-space: nowrap;

                &:hover {
                    background-color: var(--hover-color);

                    .show-tooltip {
                        opacity: 1;
                        visibility: visible;
                        // Delay for opacity just on hover for a suttle effect
                        transition-delay: 400ms;
                        transition-property: opacity;
                    }
                }
            }
        }

        // For better contrast between hover-color and text color
        .icon-iceshrimp, .icon-liberapay, .icon-gitlab, .icon-telegram {
            .popover-tooltip { color: #000 }
        }

        .icon-twitter, .icon-matrix, .icon-github {
            &:hover svg { color: white }
        }

        // Overrides for PopoverTooltip content
        .iceshrimp-tooltip {
            --link-color: #A8D3F9;
            --link-hover-color: #85C7E8;
            bottom: 160%;
            padding: 5px;
            min-width: 150px;
            font-size: 0.85rem;
            color: var(--background-color);

            & > p a {
                color: #064e79;
                text-decoration: underline;
                cursor: pointer;
            }

            .info-tooltip-button {
                display: flex;
                justify-content: center;
                text-decoration: none;
                margin-top: 5px;
                padding: 3px 0;
                background-color: rgba(0,0,0,0.3);
                border-radius: 5px;
                color: var(--link-color);

                &:hover {
                    background-color: rgba(0,0,0,0.4);
                    color: var(--link-hover-color);
                    cursor: pointer;

                    svg {
                        color: var(--link-hover-color);
                    }
                }

                svg {
                    color: var(--link-color);
                    margin-top: 2px;
                }
            }
        }
    }
</style>
