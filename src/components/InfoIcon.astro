---
const { class: className, ...rest } = Astro.props;
---

<span class:list={["info-icon", className ]} {...rest}>
    <b>i</b>
    <slot />
</span>

<style lang="scss">
    .info-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        width: 1.2rem;
        height: 1.2rem;
        border-radius: 100%;
        color: var(--background-color);
        background-color: var(--offwhite-color);
        box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.75);
        user-select: none;

        b { font-size: 0.75rem }
    }
</style>
