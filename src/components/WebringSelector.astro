---
const { name, random_href, next_href, previous_href } = Astro.props;
---

<div>
    <p>{name}</p>
    <span>
        <a class="webring-previous" href={previous_href}>&laquo;</a>
        <a class="webring-random" href={random_href}>Random</a>
        <a class="webring-next" href={next_href}>&raquo;</a>
    </span>
</div>

<style lang="scss">
    div {
        background-color: #454549;
        border-radius: calc(var(--border-radius) - 5px);
        padding: 5px;
        font-size: 0.75rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 0.25rem;
        height: fit-content;
        box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.2);

        span {
            display: flex;
            justify-content: center;

            a {
                padding: 2px 5px;
                background-color: gray;
                user-select: none;
                transition: 150ms;
                text-decoration: none;
                color: var(--offwhite-color);

                &:hover {
                    background-color: var(--secondary-color);
                    cursor: pointer;
                    color: var(--background-color);
                }

                &:first-child {
                    border-right: 2px solid #454549;
                    border-top-left-radius: calc(var(--border-radius) - 7px);
                    border-bottom-left-radius: calc(var(--border-radius) - 7px);
                }
                &:last-child {
                    border-left: 2px solid #454549;
                    border-top-right-radius: calc(var(--border-radius) - 7px);
                    border-bottom-right-radius: calc(var(--border-radius) - 7px);
                }
            }
        }
    }
</style>
